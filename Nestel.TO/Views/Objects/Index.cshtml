@model Nestel.TO.ViewModels.ObjectListViewModel


@{
    ViewData["Title"] = "Index";
}

<h2>Список объектов</h2>
<a asp-action="Create" asp-controller="Objects" class="btn btn-block" style="font-size:24px">+</a>

<table class="table table-hover table-condensed table-striped">
    <thead>
        <tr>
            <th>Название</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.Objects)
        {
            <tr>
                <th hidden="hidden"></th>
                <td>@obj.Name</td>
                @if (ViewBag.AllowEdit)
                {
                    <td>
                        <a asp-controller="Objects" asp-action="Edit" asp-route-id="@obj.Id">Редактировать</a>
                    </td>
                    <td>
                        <form method="post" asp-controller="Objects" asp-action="Delete">
                            <div asp-validation-summary="ModelOnly" class="wrong-string"></div>
                            <input type="hidden" name="id" value="@obj.Id" />
                            <input type="submit" value="Удалить" class="btn btn-link" />
                        </form>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>